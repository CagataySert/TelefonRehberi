@model List<TelefonRehberiEntities.Entities.Employee>
@{
    ViewBag.Title = "ListOfEmployees";
    int i = 1;
}

<h2>List Of Employees</h2>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone Number</th>
                        <th>Get Detail</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@(i++)</td>
                            <td>@employee.FirstName</td>
                            <td>@employee.LastName</td>
                            <td>@employee.PhoneNumber</td>
                            <td>@Html.ActionLink("Get Detail","DetailOfEmployee","Public",new { _id = employee.Id},new { @class="btn btn-primary"})</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>